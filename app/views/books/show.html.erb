<%= flash[:notice] %>
<%= render 'books/post',book:@book_new,user:@user %>



    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
    <table class="table">
      <tr>
        <th colspan="3"></th>
      </tr>
      <tbody>

        <tr>
          <td>
            <%= link_to user_path(@book.user ) do%>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              <br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <span><%= link_to @book.title,book_path(@book.id) %></span>
            <span><%= @book.body %></span>
          </td>
          <td>
            <% if @user == current_user %>
            <%= link_to "Edit",edit_book_path(@book),class: "btn btn-success" %>
          <% end %>
          </td>
          <td>
            <% if @user == current_user %>
            <div class = "btn btn-sm btn-block mb-3 Destroy">
              <%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-danger" %>
            <% end %>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
    </div>
    </div>
    </div>