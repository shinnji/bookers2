<%= render 'books/post',book:@book,user:current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>opinion</th>
        <th colspan="3"></th>
      </tr>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user ) do%>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
            <% end %>
          </td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
    </div>