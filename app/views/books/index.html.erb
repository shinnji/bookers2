<div class="container">
  <div class="row">
 <div class="col-md-3">
      <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <table class="table">
  <tbody>
    <tr></tr>
  <tr>
     <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th></th>
  </tr>
</tbody>
</table>

<div class="row">
  <%= link_to 'profile', edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
   <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
    <table class="table">
      <tr>
        <th>Title</th>
        <th>opinion</th>
        <th colspan="3"></th>
      </tr>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user ) do%>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
            <% end %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "edit",edit_book_path(book) %>
          </td>
          <td>
            <% if @user == current_user %>
            <div class = "btn btn-sm btn-block mb-3 Destroy">
              <%= link_to "Destroy", book_path(book), method: :delete %>
            <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
    </div>