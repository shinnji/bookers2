<main>
        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

       <%= form_with model:@user, url: user_path, method: :PATCH, local:true do |f| %>
      <div class="form-group">

          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name"%>

      </div>
     <div class="form-group">
        <label for="user_image">Image</label>
       <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction,autofocus: true, id:"user_introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User" %>

      </div>
      <% end %>
      </div>
      </div>


